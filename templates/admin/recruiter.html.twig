{% extends 'profile/base.html.twig' %}
{% trans_default_domain 'MyProfile' %}

{% block title 'form.recruiter.head.title'|trans %}
{% block body %}
    {% if data %}
        <div class="columns is-multiline">
            <div class="column is-2 is-offset-10">
                {% include "profile/partial/form/button.html.twig" with {
                    'path': path('admin_recruiter_new'),
                    'name': 'form.submit.new'|trans,
                    'icon': 'fa fa-plus',
                } %}
            </div>
            <div class="column is-full">
                <table class="table is-fullwidth">
                    <thead>
                    <tr>
                        <th>{{ 'form.recruiter.first_name'|trans }}</th>
                        <th>{{ 'form.recruiter.last_name'|trans }}</th>
                        <th>{{ 'form.default.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for row in data %}
                        <tr>
                            <td>{{ row.firstName }}</td>
                            <td>{{ row.lastName }}</td>
                            <td>
                                {% include "profile/partial/form/button.html.twig" with {
                                    'path': path('admin_recruiter_edit', { 'id': row.id }),
                                    'icon': 'fa fa-pencil',
                                    'class': 'is-text edit',
                                } %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        {% include "profile/partial/form/empty_list.html.twig" with {
            'path': path('admin_recruiter_new')
        } %}
    {% endif %}
{% endblock %}

