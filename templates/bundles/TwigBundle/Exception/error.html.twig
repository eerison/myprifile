{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('web-site') }}
{% endblock %}
{% block body %}
    <div class="container mt-5 has-text-centered">
        <h1 class="is-size-4">{{ message| default('Internal server error') }}</h1>
        <i class="fa {{ icon | default('fa-warning') }} is-centered is-primary is-size-1 mb-5 mt-5"></i>
        <br>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_profile', {'slug': app.user.slug}) }}" class="button is-primary ">
            <span class="icon is-small">
              <i class="fa fa-user-circle"></i>
              </span>
                <span>
                 My profile
               </span>
            </a>
        {% else %}
            <a href="{{ path('app_homepage') }}" class="button is-primary ">
              <span class="icon is-small">
               <i class="fa fa-home "></i>
             </span>
                <span>
                Return to the homepage
             </span>
            </a>
        {% endif %}
    </div>
{% endblock %}

