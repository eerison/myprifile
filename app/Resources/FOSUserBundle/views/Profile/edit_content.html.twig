{% trans_default_domain 'FOSUserBundle' %}

<div class="alert alert-info">
    Estamos em uma versão BETA, caso queira informar algum problema, envie um e-mail para:
    <strong>contato@myprofile.pro</strong>
</div>
{% if not app_gravatar.isProfile(app.user.email) %}
    <div class="alert alert-warning">
        <i class="fa fa-warning"></i>
        Por favor, configure ou crie uma conta no <a href="https://pt.gravatar.com" target="_blank">Gravatar</a> com seu e-mail : <strong>{{ app.user.email }}</strong>,
        <p>Obs: A imagem do seu perfil e a imagem de fundo vai ser seu gravatar, o mesmo permanecerá na pagina inicial!</p>
    </div>
{% endif %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
{{ form_end(form) }}
