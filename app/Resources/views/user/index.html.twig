{% extends 'base_profile.html.twig' %}

{% block container_profile %}
    <h1>Users list : {{ users | length }}</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Role</th>
                <th>Photo</th>
                <th>Gender</th>
                <th>Birthday</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.role }}</td>
                <td>{% if user.photo %}<img src="{{ user.photo }}" class="img-thumbnail" style="width: 50px"/>{% endif %}</td>
                <td>{{ user.gender }}</td>
                <td>{% if user.birthday %}{{ user.birthday|date('Y-m-d') }}{% endif %}</td>
                <td>
                    {%  if user.enabled %}
                        <i class="fa fa-check text-success"></i>
                    {% else %}
                        <i class="fa fa-close text-danger"></i>
                    {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('app_profile', { 'username': user.username}) }}" target="_blank">view profile</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
